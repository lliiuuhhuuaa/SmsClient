<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorMoneyRed"/>
            <corners android:radius="5dp" />
            <stroke android:width="2sp"
                android:color="@color/colorPrimary"/>
        </shape>
        <item>
            <shape android:shape="rectangle">
                <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp" />
                <solid android:color="#000" />
                <corners android:radius="8dp" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp" />
                <solid android:color="#000" />
                <corners android:radius="8dp" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp" />
                <solid android:color="#000" />
                <corners android:radius="8dp" />
            </shape>
        </item>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorMoneyRed"/>
            <corners android:radius="5dp" />
            <size android:width="80dp" android:height="30dp"/>
            <stroke android:width="2sp"
                android:color="@color/colorLine"/>
        </shape>
    </item>
</selector>