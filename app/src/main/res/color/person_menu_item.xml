<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/colorLine" android:color="@color/colorLine" />
    <item android:color="@color/colorLine">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:bottom="1dp" android:top="-2dp" android:left="-2dp" android:right="-2dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/colorLine" />
                </shape>
                <corners android:bottomRightRadius="20dp"/>
                <padding android:left="10dp"/>
            </item>
        </layer-list>
    </item>
</selector>